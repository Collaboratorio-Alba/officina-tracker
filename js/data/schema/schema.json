{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/courses-structure.schema.json",
  "title": "Ciclofficina CMS Course Schema",
  "description": "Schema per moduli didattici e corsi della ciclofficina popolare",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "schemaNotes": {
      "type": "string"
    },
    "courses": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "description",
          "teachingAreas"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "teachingAreas": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "modules"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "color": {
                  "type": "string",
                  "pattern": "^#(?:[0-9a-fA-F]{3}){1,2}$"
                },
                "modules": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": [
                      "id",
                      "title",
                      "contentPath"
                    ],
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "title": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "difficulty": {
                        "type": "string",
                        "enum": [
                          "base",
                          "intermedio",
                          "avanzato"
                        ]
                      },
                      "estimatedDuration": {
                        "type": "integer",
                        "minimum": 1
                      },
                      "toolsRequired": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "learningOutcomes": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "practicalCriteria": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "dependencies": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "required": [
                            "moduleId"
                          ],
                          "properties": {
                            "moduleId": {
                              "type": "string"
                            },
                            "type": {
                              "type": "string",
                              "enum": [
                                "mandatory",
                                "recommended"
                              ]
                            }
                          }
                        }
                      },
                      "skillTags": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "revisionDate": {
                        "type": [
                          "string",
                          "null"
                        ],
                        "format": "date"
                      },
                      "contentPath": {
                        "type": "string",
                        "pattern": "^/content/.+\\.md$"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "version",
    "courses"
  ]
}